{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:us-east-1:$account_id:log-group:/aws/lambda/query-api-${DEPLOYMENT_STAGE}",
        "arn:aws:logs:us-east-1:$account_id:log-group:/aws/lambda/query-api-${DEPLOYMENT_STAGE}:*:*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:DescribeSecret",
        "secretsmanager:GetSecretValue"
      ],
      "Resource": [
        "arn:aws:secretsmanager:us-east-1:$account_id:secret:query/${DEPLOYMENT_STAGE}/*",
        "arn:aws:secretsmanager:us-east-1:$account_id:secret:dcp/query/${DEPLOYMENT_STAGE}/database-*"

      ]
    }
  ]
}
